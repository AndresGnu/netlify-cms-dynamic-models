{
  "extends": "stylelint-config-recommended",
  "rules": {
    "declaration-block-trailing-semicolon": "always",
    "declaration-block-semicolon-newline-after": "always",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "variants",
          "responsive",
          "screen",
          "mixin",
          "define-mixin"
        ]
      }
    ]
  }
}
